#include <bits/stdc++.h>
 
using namespace std;
 
int main() 
{
    long long int n,i,sum,k,l,m=-10000000;
	cin>>n;
	long long int a[n],b[n];
    for(i=0;i<n;i++)
	{
		cin>>a[i];
		if(i>0)
		a[i]=a[i-1]+a[i];
	}
    
	for(i=0;i<n;i++)
	{
		l=n-i;
		sum=0;
		k=(-1+(int)sqrt((double)(8*l+1)))/2;
		sum=a[(k*(k+1))/2+i-1];
		if(i!=0)
		sum-=a[i-1];
		m=max(m,sum);
	}
	cout<<m;
	return 0;
}

Cpp cdoe :

#include<iostream>
using namespace std;
typedef long long int ll;
int main()
{
	long long t,a,b,c;
	cin>>t;
	while(t--)
	{
		cin>>a>>b>>c;
	    ll j=abs(2*b-a-c);
		cout<<(j+1)/2<<endl;
	}
	return 0;
}

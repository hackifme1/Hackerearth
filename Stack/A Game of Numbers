Cpp code :

#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int main() {
	ll n,i,j,k,elem;
	cin>>n;
    vector<ll> A,res,v,v1,v2;

	for(i=0;i<n;i++)
    {
        cin>>elem;
        A.push_back(elem);
    }

    stack<pair<ll,ll> > s;
    stack<ll> stc;
    ll a[A.size()];
     ll arr[A.size()];
    for(i=A.size()-1;i>=0;i--)
    {
        while((!s.empty())&&(((s.top()).first)<=A[i]))
            s.pop();

        if(s.empty())
            a[i]=-1;
        else
            a[i]=(s.top()).second;

            s.push(make_pair(A[i],i));
    }

   for(i=A.size()-1;i>=0;i--)
    {
         while((!stc.empty())&&((stc.top())>=A[i]))
            stc.pop();

        if(stc.empty())
            arr[i]=-1;
        else
            arr[i]=stc.top();

            stc.push(A[i]);

    }


    for(i=0;i<n;i++)
       {
           if(a[i]!=-1)
          res.push_back(arr[a[i]]);
          else
            res.push_back(-1);
       }

    for(i=0;i<A.size();i++)
        cout<<res[i]<<" ";

	return 0;
}
